{
  "appName": "${JL_APP_NAME}",
  "rootDir": "${JL_APP_DATA_DIR}",
  "host": "${JL_APP_HOST}",
  "debug": false,
  "ts_node": true,

  "cluster": false,
  "port": 80,
  "apiPort": 4103,
  "socket_file": "${{rootDir}}/web.sock",
  "pid_file": "${{rootDir}}/tmp/server.pid",

  "postgres":{
    "url": "${JL_APP_POSTGRES}",
    "debug": true
  },
  "redis":{
    "url": "${JL_APP_REDIS}"
  },
  "hosts": {
    "main":{"addr":"api.l.jingli365.com", "port":4002, "www":"https://${{hosts.main.addr}}"}
  },
  "api": {
    "postgres": "${{postgres.url}}",
    "remotes": [
      {
        "connect": {"host":"${{hosts.main.addr}}", "port":"${{hosts.main.port}}"},
        "modules": "*"
      }
    ]
  },
  "logger": {
    "path": "${{rootDir}}/log",
    "prefix": "${{appName}}_",
    "httptype": "short",
    "mods": {
      "sequelize": { "prefix": "${{appName}}_sql_", "console": false },
      "sqlinit": { "prefix": "${{appName}}_sql_", "console": false },
      "http": {
        "mods": {
          "access": { "console": false }
        }
      }
    }
  }
}
